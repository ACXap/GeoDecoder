<Controls:MetroWindow x:Name="metroWindow"
    x:Class="GeoCoding.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cmd="http://www.galasoft.ch/mvvmlight"
    xmlns:local="clr-namespace:GeoCoding"
    xmlns:uc="clr-namespace:GeoCoding.UserControls"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    Title="Геокодирование" WindowButtonCommandsOverlayBehavior="Always"
    Width="1400"
    Height="800"
    Dialog:DialogParticipation.Register="{Binding}"
    BorderBrush="{DynamicResource AccentColorBrush}"
    BorderThickness="1"
    mc:Ignorable="d">
    <!--  Ресурсы окна, в основном конвертеры  -->
    <Controls:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:ConverterKindTypeToString x:Key="ConverterKindTypeToString" />
        <local:ConverterPrecisionTypeToString x:Key="ConverterPrecisionTypeToString" />
    </Controls:MetroWindow.Resources>
    <!--  Датаконтекст/ViewModel окна  -->
    <Controls:MetroWindow.DataContext>
        <local:MainWindowViewModel />
    </Controls:MetroWindow.DataContext>
    <!--  Иконка приложения с контекст меню  -->
    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <Image Margin="2" Source="geo.ico">
                <Image.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Привет =)" />
                    </ContextMenu>
                </Image.ContextMenu>
            </Image>
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <ToggleButton Name="tbOpenSettings">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextBlockSettings}" />
                </StackPanel>
            </ToggleButton>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>


    <!--  Основная панель контролов  -->
    <Grid AllowDrop="True">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="PreviewDrop">
                <cmd:EventToCommand Command="{Binding CommandDragDrop}" PassEventArgsToCommand="True" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Работа с получением данных и сохранением  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  Вкладки Файл, БД  -->
            <TabControl Grid.Column="0" Controls:TabControlHelper.Underlined="SelectedTabItem">

                <!--  Работа с файлами  -->
                <TabItem Header="Файлы">
                    <Border>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <!--  Панель работы с входным файлом  -->
                            <Border
                                Grid.Column="0"
                                Padding="5"
                                BorderBrush="{DynamicResource AccentColorBrush}"
                                BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Имя входного файла с данными  -->
                                    <TextBox
                                        Grid.Row="0"
                                        Controls:TextBoxHelper.Watermark="Выбрать файл с данными"
                                        IsReadOnly="True"
                                        Tag="{Binding CommandOpenFolder}"
                                        Template="{StaticResource TextBoxWithControl}"
                                        Text="{Binding FilesSettings.FileInput, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                    <!--  Управление входным файлом  -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Кнопка получения данных  -->
                                        <Button
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Command="{Binding CommandGetDataFromFile}"
                                            Content="Получить данные"
                                            Style="{StaticResource ButtonMainStyle}" />

                                        <!--  Настройки для получения данных  -->
                                        <StackPanel Grid.Column="1" Orientation="Vertical">

                                            <!--  Выбор входного файла на ФТП-сервере  -->
                                            <CheckBox
                                                Margin="5"
                                                Content="Файл на FTP сервере"
                                                IsChecked="{Binding FilesSettings.IsFileInputOnFTP}"
                                                IsEnabled="False" />

                                            <!--  После выбора файла с данными, данные получаем сразу  -->
                                            <CheckBox
                                                Margin="5,0,5,0"
                                                Content="Данные получить сразу"
                                                IsChecked="{Binding FilesSettings.CanGetDataOnce}" />
                                        </StackPanel>

                                        <!--  Выбор файла с данными, открываем проводник  -->
                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding CommandGetFile}"
                                            Content="Выбрать файл с данными"
                                            Style="{StaticResource ButtonMainStyle}" />
                                    </Grid>
                                </Grid>
                            </Border>

                            <!--  Панель работы с выходным файлом  -->
                            <Border
                                Grid.Column="2"
                                Padding="5"
                                BorderBrush="{DynamicResource AccentColorBrush}"
                                BorderThickness="1">

                                <!--  Панель работы с выходным файлом  -->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Файл для сохранения  -->
                                    <TextBox
                                        Grid.Row="0"
                                        VerticalAlignment="Center"
                                        Controls:TextBoxHelper.Watermark="Выбрать файл для сохранения"
                                        IsReadOnly="True"
                                        Tag="{Binding CommandOpenFolder}"
                                        Template="{StaticResource TextBoxWithControl}"
                                        Text="{Binding FilesSettings.FileOutput, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                    <!--  Управление выходным файлом  -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Выбор файла для сохранения  -->
                                        <Button
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Command="{Binding CommandSetFileOutput}"
                                            Content="Выбрать файл для сохранения"
                                            Style="{StaticResource ButtonMainStyle}" />

                                        <!--  Настройки для сохранения  -->
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="5"
                                            Orientation="Vertical">

                                            <!--  Копировать ли выходной файл на ФТП-сервер  -->
                                            <CheckBox
                                                VerticalAlignment="Center"
                                                Content="Так же скопировать данный файл на FTP сервер"
                                                IsChecked="{Binding FilesSettings.CanCopyFileOutputToFtp, UpdateSourceTrigger=PropertyChanged}"
                                                IsEnabled="False"
                                                ToolTip="После сохранения файла на локальном диске, файл будет скопирован на FTP сервер (если он настроен на вкладке FTP)" />

                                            <!--  Настройка разбиения выходного файла  -->
                                            <StackPanel Orientation="Horizontal" ToolTip="Разбить выходной файл на части (по количеству строк), 0 - без разбиения">

                                                <!--  Разбивать ли выходной файл на части (по количеству строк)  -->
                                                <CheckBox
                                                    Content="Разбить файл на части (по строкам):"
                                                    IsChecked="{Binding FilesSettings.CanBreakFileOutput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                <!--  Максимальное количество строк в файле  -->
                                                <TextBox
                                                    Width="80"
                                                    Margin="5,0,0,0"
                                                    IsEnabled="{Binding FilesSettings.CanBreakFileOutput}"
                                                    Text="{Binding FilesSettings.MaxSizePart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Кнопка сохранения данных  -->
                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding CommandSaveData}"
                                            Content="Сохранить данные"
                                            Style="{StaticResource ButtonMainStyle}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>

                <!--  Работа с базой данных  -->
                <TabItem Header="БД" IsEnabled="False">
                    <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1" />
                </TabItem>
            </TabControl>
        </Grid>

        <!--  Таблицы с данными, статистика, кнопка запуска геокодирования, индикация процесса  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  Индикация работы геокодирования  -->
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="1"
                Orientation="Horizontal"
                Visibility="{Binding IsStartGeoCoding, Converter={StaticResource BooleanToVisibilityConverter}}">

                <!--  Подпись к индикации процесса геокодирования  -->
                <TextBlock
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="Red"
                    Text="Идет обработка данных..." />

                <!--  Прогрессбар для процесса геокодирования  -->
                <Controls:ProgressRing IsActive="{Binding IsStartGeoCoding}" />
            </StackPanel>

            <!--  Данные  -->
            <TabControl Grid.Column="0">
                <TabItem Header="Данные">
                    <DataGrid ItemsSource="{Binding CollectionGeoCod}" Style="{StaticResource DataGridMainAll}">
                        <DataGrid.Columns>

                            <!--  Колонка статуса  -->
                            <DataGridTemplateColumn SortMemberPath="Status">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{StaticResource TextBlockStatus}" Tag="{Binding Status}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Колонка адреса  -->
                            <DataGridTemplateColumn Header="Адрес" SortMemberPath="Address">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Address}" TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Колонка широта  -->
                            <DataGridTemplateColumn Header="Широта">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Latitude}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Колонка долгота  -->
                            <DataGridTemplateColumn Header="Долгота">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Longitude}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Колонка вид объекта  -->
                            <DataGridTemplateColumn Header="Вид объекта" SortMemberPath="Kind">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Kind, Converter={StaticResource ConverterKindTypeToString}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Колонка качество  -->
                            <DataGridTemplateColumn Header="Качество" SortMemberPath="Precision">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Precision, Converter={StaticResource ConverterPrecisionTypeToString}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Колонка качество для базы  -->
                            <DataGridTemplateColumn Header="Qcode" SortMemberPath="Qcode">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Qcode}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Ошибки">
                    <DataGrid
                        ItemsSource="{Binding Customers}"
                        Style="{StaticResource DataGridErrors}">
                        <DataGrid.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.Panel>
                                    <ItemsPanelTemplate>
                                        <DataGridRowsPresenter />
                                    </ItemsPanelTemplate>
                                </GroupStyle.Panel>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Margin" Value="0,0,0,5" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Expander IsExpanded="False">
                                                        <Expander.Header>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock
                                                                    Margin="5,0,0,0"
                                                                    FontWeight="Bold"
                                                                    Text="{Binding Path=Name}" />
                                                                <TextBlock
                                                                    Margin="20,0,0,0"
                                                                    FontWeight="Bold"
                                                                    Text="Количество:" />
                                                                <TextBlock
                                                                    Margin="5,0,0,0"
                                                                    FontWeight="Bold"
                                                                    Text="{Binding Path=ItemCount}" />
                                                            </StackPanel>
                                                        </Expander.Header>
                                                        <Expander.Content>
                                                            <ItemsPresenter />
                                                        </Expander.Content>
                                                    </Expander>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </DataGrid.GroupStyle>
                        <DataGrid.Columns>

                            <!--  Колонка адреса  -->
                            <DataGridTemplateColumn Header="Адрес" SortMemberPath="Address">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            Text="{Binding Address}"
                                            TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Колонка адреса  -->
                            <DataGridTemplateColumn Header="Ошибка" SortMemberPath="Error">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="5,0"
                                            Text="{Binding Error}"
                                            TextWrapping="Wrap" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Колонка кол. результатов  -->
                            <DataGridTemplateColumn Header="Кол.результатов" SortMemberPath="CountResult">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding CountResult}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

            </TabControl>

            <!--  Статистика, кнопка запуска геокодирования, настройки геокодирования  -->
            <Grid Grid.Column="1" Width="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--  Статистика  -->
                <GroupBox Margin="3" Header="Статистика">
                    <uc:Statistics />
                </GroupBox>

                <!--  Запуск геокодирования  -->
                <Button Grid.Row="1" Style="{StaticResource ButtonStopStart}" />

                <!--  Настройки геокодирования  -->
                <StackPanel
                    Grid.Row="2"
                    Orientation="Vertical">

                    <TextBlock
                        Margin="5,1,1,1"
                        FontWeight="Bold"
                        Text="Что геокодируем:" />
                    <!--  Геокодировать все объекты в таблице данных  -->
                    <CheckBox
                        Margin="10,2,2,5"
                        Content="Все" IsEnabled="False"
                        IsChecked="{Binding GeoCodSettings.CanGeoCodGetAll}" />

                    <!--  Геокодировать только объекты со статусом "Ошибка"  -->
                    <CheckBox
                        Margin="10,2,2,5"
                        Content="С ошибками" IsEnabled="False"
                        IsChecked="{Binding GeoCodSettings.CanGeoCodGetError}" />

                    <!--  Геокодировать только объекты со статусом "Негеокодирован"  -->
                    <CheckBox
                        Margin="10,2,2,5" IsEnabled="False"
                        Content="Негеокодированные"
                        IsChecked="{Binding GeoCodSettings.CanGeoCodGetNotGeo}" />

                    <TextBlock
                        Margin="5,1,1,1"
                        FontWeight="Bold"
                        Text="Что делаем после:" />
                    <CheckBox
                        Margin="10,2,2,5" IsEnabled="False"
                        IsChecked="{Binding GeoCodSettings.CanSaveDataAsTemp}"
                        ToolTip="Сохранить все данные в формате программы, во временную папку">
                        <TextBlock Text="Сохранить временные результаты" TextWrapping="Wrap" />
                    </CheckBox>

                    <CheckBox
                        Margin="10,2,2,5"
                        Content="Сохранить результаты"
                        IsChecked="{Binding GeoCodSettings.CanSaveDataAsFinished}"
                        ToolTip="Сохранить все данные в формате для базы данных" />

                    <CheckBox
                        Margin="10,2,2,5"
                        IsChecked="{Binding GeoCodSettings.CanOpenFolderAfter}"
                        ToolTip="Сохранить все данные в формате для базы данных">
                        <TextBlock Text="Открыть папку результатов после сохранения" TextWrapping="Wrap"/>
                    </CheckBox>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>

    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout IsOpen="{Binding ElementName=tbOpenSettings, Path=IsChecked}"  Position="Bottom" >
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Expander Grid.Row="0" Header="Файлы и папки" IsExpanded="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Папка для входящих файлов" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="0" Text="{Binding FilesSettings.FolderInput}" IsReadOnly="True" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Папка для исходящих файлов" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding FilesSettings.FolderOutput}" IsReadOnly="True" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Папка для временных файлов" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding FilesSettings.FolderTemp}" IsReadOnly="True" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Загружать данные из файла сразу" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="3" IsChecked="{Binding FilesSettings.CanGetDataOnce}" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Разбить файл на части (по строкам)" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="4" IsChecked="{Binding FilesSettings.CanBreakFileOutput}" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="5" Text="Количество строк" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="5" Text="{Binding FilesSettings.MaxSizePart, UpdateSourceTrigger=PropertyChanged}"  Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="6" Text="Файл находится на FTP сервере" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="6" IsChecked="{Binding FilesSettings.IsFileInputOnFTP}" IsEnabled="False" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="7" Text="Скопировать выходной файл на FTP сервер" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="7" IsChecked="{Binding FilesSettings.CanCopyFileOutputToFtp}" IsEnabled="False" Margin="5"/>
                        </Grid>
                    </Expander>
                    <Expander Grid.Row="1" Header="FTP сервер">
                        <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="FTP сервер" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="0" Text="{Binding FTPSettings.Server}" IsEnabled="False" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Порт" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding FTPSettings.Server}" IsEnabled="False" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="2" Text="User" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding FTPSettings.Server}" IsEnabled="False" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Password" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="3" Text="{Binding FTPSettings.Server}" IsEnabled="False" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Папка исходящих файлов" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="4" Text="{Binding FTPSettings.FolderOutput}" IsEnabled="False" Margin="5"/>
                            <TextBlock Grid.Column="0" Grid.Row="5" Text="Папка входящих файлов" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Grid.Row="5" Text="{Binding FTPSettings.FolderInput}" IsEnabled="False" Margin="5"/>
                        </Grid>
                    </Expander>
                    <Expander Grid.Row="2" Header="База данных"/>
                    <Expander Grid.Row="3" Header="Геокодирование">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Геокодировать все объекты" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="0" IsChecked="{Binding GeoCodSettings.CanGeoCodGetAll}" Margin="5"/>

                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Геокодировать только объекты с ошибками" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="1" IsChecked="{Binding GeoCodSettings.CanGeoCodGetError}" Margin="5"/>

                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Геокодировать негеокодированные объекты" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="2" IsChecked="{Binding GeoCodSettings.CanGeoCodGetNotGeo}" Margin="5"/>

                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Сохранить все данные геокодирования в полном объеме" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="3" IsChecked="{Binding GeoCodSettings.CanSaveDataAsTemp}" Margin="5"/>

                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Сохранить все данные геокодирования в формате для базы данных" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="4" IsChecked="{Binding GeoCodSettings.CanSaveDataAsFinished}" Margin="5"/>

                            <TextBlock Grid.Column="0" Grid.Row="5" Text="Открывать папку с результатом после сохранения" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="2" Grid.Row="5" IsChecked="{Binding GeoCodSettings.CanOpenFolderAfter}" Margin="5"/>
                        </Grid>
                    </Expander>
                    <Expander Grid.Row="4" Header="Оповещения"/>
                    <Button Grid.Row="5" Content="Сохранить настройки" HorizontalAlignment="Left" Margin="10" Padding="10"/>
                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>

</Controls:MetroWindow>