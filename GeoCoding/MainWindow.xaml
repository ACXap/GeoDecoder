<Controls:MetroWindow
    x:Class="GeoCoding.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeoCoding"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:GeoCoding.UserControls"
    Title="Геокодирование"
    Width="1200"
    Height="800"
    Dialog:DialogParticipation.Register="{Binding}"
    BorderBrush="{DynamicResource AccentColorBrush}"
    BorderThickness="1"
    mc:Ignorable="d">
    <Controls:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.DataContext>
        <local:MainWindowViewModel />
    </Controls:MetroWindow.DataContext>
    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <Image Source="geo.ico">
                <Image.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Привет =)" />
                    </ContextMenu>
                </Image.ContextMenu>
            </Image>
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>

    <!--Основная панель контролов-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Работа с получением данных и сохранением  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  Вкладки Файл, БД, ФТП  -->
            <TabControl Grid.Column="0" Controls:TabControlHelper.Underlined="SelectedTabItem">

                <!--Работа с файлами-->
                <TabItem Header="Файлы">
                    <Border>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <!--Панель работы с входным файлом-->
                            <Border
                                Grid.Column="0"
                                Padding="5"
                                BorderBrush="{DynamicResource AccentColorBrush}"
                                BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBox
                                        Grid.Row="0"
                                        Controls:TextBoxHelper.Watermark="Выбрать файл с данными"
                                        IsReadOnly="True"
                                        Tag="{Binding CommandOpenFolder}"
                                        Template="{StaticResource TextBoxWithControl}"
                                        Text="{Binding Files.FileInput, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                      <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                          <ColumnDefinition Width="auto"/>
                                          <ColumnDefinition Width="*"/>
                                          <ColumnDefinition Width="auto"/>
                                          <Button
                                              Grid.Column="0"
                                              HorizontalAlignment="Left"
                                              Command="{Binding CommandGetDataFromFile}"
                                              Content="Получить данные"
                                              Style="{StaticResource ButtonMainStyle}" />
                                      <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <CheckBox
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Content="Файл на FTP сервере"
                                            IsChecked="{Binding}" />
                                        <CheckBox
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Content="Данные получить сразу"
                                            IsChecked="{Binding CanGetDataOnce}" />
                                      </StackPanel>
                                        <Button
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Command="{Binding CommandGetFile}"
                                            Content="Выбрать файл с данными"
                                            Style="{StaticResource ButtonMainStyle}" />
                                      </Grid>
                                </Grid>
                            </Border>

                            <!--Панель работы с выходным файлом-->
                            <Border
                                Grid.Column="2"
                                Padding="5"
                                BorderBrush="{DynamicResource AccentColorBrush}"
                                BorderThickness="1">

                                <!--Панель работы с выходным файлом-->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--Файл для сохранения-->
                                    <TextBox
                                        Grid.Row="0"
                                        VerticalAlignment="Center"
                                        Controls:TextBoxHelper.Watermark="Выбрать файл для сохранения"
                                        IsReadOnly="True"
                                        Tag="{Binding CommandOpenFolder}"
                                        Template="{StaticResource TextBoxWithControl}"
                                        Text="{Binding Files.FileOutput, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--Выбор файла для сохранения-->
                                        <Button
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Command="{Binding CommandSetFileOutput}"
                                            Content="Выбрать файл для сохранения"
                                            Style="{StaticResource ButtonMainStyle}" />

                                        <!--Настройки для сохранения-->
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="5"
                                            Orientation="Vertical">
                                            <CheckBox
                                                VerticalAlignment="Center"
                                                Content="Так же скопировать данный файл на FTP-сервер"
                                                IsChecked="{Binding Files.CanCopyFileOutputToFtp, UpdateSourceTrigger=PropertyChanged}"
                                                IsEnabled="False"
                                                ToolTip="После сохранения файла на локальном диске, файл будет скопирован на FTP-сервер (если он настроен на вкладке FTP)" />
                                            <StackPanel Orientation="Horizontal" ToolTip="Разбить выходной файл на части (по количеству строк), 0 - без разбиения">
                                                <CheckBox
                                                    Content="Разбить файл на части (по строкам):"
                                                    IsChecked="{Binding Files.CanBreakFileOutput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    IsEnabled="False" />
                                                <TextBox
                                                    Width="80"
                                                    Margin="5,0,0,0"
                                                    IsEnabled="{Binding Files.CanBreakFileOutput}"
                                                    Text="{Binding Files.MaxSizePart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>

                                        </StackPanel>

                                         <!--Кнопка сохранения данных-->
                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding CommandSaveData}"
                                            Content="Сохранить данные"
                                            Style="{StaticResource ButtonMainStyle}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>

                <!--Работа с базой данных-->
                <TabItem Header="БД" IsEnabled="False">
                    <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1" />
                </TabItem>
            </TabControl>
        </Grid>

        <!--  Таблицы с данными, статистика, кнопка запуска геокодирования, индикация процесса  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!-- Индикация работы геокодирования-->
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="1"
                Orientation="Horizontal"
                Visibility="{Binding IsStartGeoCoding, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="Red"
                    Text="Идет обработка данных..." />
                <Controls:ProgressRing IsActive="{Binding IsStartGeoCoding}" />
            </StackPanel>

            <!--Данные-->
            <TabControl Grid.Column="0">
                <TabItem Header="Данные">
                    <DataGrid ItemsSource="{Binding CollectionGeoCod}" Style="{StaticResource DataGridMain}">
                        <DataGrid.Columns>
                            <!--<DataGridTemplateColumn Header="GlobalID" SortMemberPath="GlobalID">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GlobalID}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>-->
                            <DataGridTemplateColumn SortMemberPath="Status">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{StaticResource TextBlockStatus}" Tag="{Binding Status}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Адрес" SortMemberPath="Address">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Address}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Широта">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Latitude}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Долгота">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Longitude}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Вид объекта" SortMemberPath="Kind">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Kind}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Качество" SortMemberPath="Precision">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Precision}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Качество - Qcode" SortMemberPath="Qcode">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" Text="{Binding Qcode}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Ошибки" />
            </TabControl>

            <!--Статистика и кнопка запуска геокодирования-->
            <Grid Grid.Column="1" Width="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--Статистика-->
                <GroupBox Margin="3" Header="Статистика">
                    <uc:Statistics />
                </GroupBox>

                <!--Запуск геокодирования-->
                <Button Grid.Row="1" Style="{StaticResource ButtonStopStart}" />
            </Grid>
        </Grid>
    </Grid>
</Controls:MetroWindow>
