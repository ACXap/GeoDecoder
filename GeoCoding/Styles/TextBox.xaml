<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:local="clr-namespace:GeoCoding.Styles">
    <ControlTemplate x:Key="TextBoxWithControl" TargetType="{x:Type TextBox}">
        <Grid>
            <TextBox
                Controls:TextBoxHelper.Watermark="{TemplateBinding Controls:TextBoxHelper.Watermark}" VerticalContentAlignment="Center"
                Text="{TemplateBinding Text}" Style="{TemplateBinding Style}" x:Name="tb"/>
            <Button
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{TemplateBinding Tag}"
                CommandParameter="{TemplateBinding Text}">
<Button.Style>
  <Style TargetType="{x:Type Button}">
    <Setter Property="Visibility" Value="Visible"/>
    <Style.Trigger>
      <Trigger Property="Text" Source="tb" Value="{x:Null}">
        <Setter Property="Visibility" Value="Colapsed"/>
      </Trigger>
  </Style>
</Button.Style>
                <Button.Template>
                    <ControlTemplate>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlockFolder}" />
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>
